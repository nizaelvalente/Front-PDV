<body>
    <header>
    </header>
    <aside>
        <nav class="page-selection-menu">
            <div class="page-selector">
                <input type="radio" class="active-page" name="active-page" checked id="active-sales-page">
                <label class="caption-active-page" for="active-sales-page">
                    <span class="material-icons">shopping_cart</span>
                    <span class="caption-page-selector">Vendas</span>
                </label>
                <%- include('./views/sales.page.ejs') %>
            </div>
            <div class="page-selector">
                <input type="radio" class="active-page" name="active-page" id="active-products-page">
                <label class="caption-active-page" for="active-products-page">
                    <span class="material-icons">inventory</span>
                    <span class="caption-page-selector">Produtos</span>
                </label>
            </div>
            <div class="page-selector">
                <input type="radio" class="active-page" name="active-page" id="active-budget-page">
                <label class="caption-active-page" for="active-budget-page">
                    <span class="material-icons">view_list</span>
                    <span class="caption-page-selector">Orçamentos</span>
                </label>
            </div>
            <div class="page-selector">
                <input type="radio" class="active-page" name="active-page" id="active-customers-page">
                <label class="caption-active-page" for="active-customers-page">
                    <span class="material-icons">people</span>
                    <span class="caption-page-selector">Clientes</span>
                </label>
            </div>
            <div class="page-selector">
                <input type="radio" class="active-page" name="active-page" id="active-users-page">
                <label class="caption-active-page" for="active-users-page">
                    <span class="material-icons">badge</span>
                    <span class="caption-page-selector">Usuários</span>
                </label>
            </div>
            <div class="page-selector">
                <input type="radio" class="active-page" name="active-page" id="active-cash-page">
                <label class="caption-active-page" for="active-cash-page">
                    <span class="material-icons">point_of_sale</span>
                    <span class="caption-page-selector">Caixa</span>
                </label>
            </div>
        </nav>
    </aside>

<%- include('./views/sell.page.ejs') %>
<%- include('./components/select.customer.ejs') %>
<%- include('./components/success.transaction.ejs') %>
<%- include('./components/complete.sale.ejs') %>
