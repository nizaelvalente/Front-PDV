    <link rel="stylesheet" href="/styles/sales.page.css">
    <link rel="stylesheet" href="/styles/sell.page.css">
    <link rel="stylesheet" href="/styles/select.customer.css">
    <link rel="stylesheet" href="/styles/success.transaction.css">
